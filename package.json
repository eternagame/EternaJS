{
  "name": "eternajs",
  "version": "1.0.0",
  "description": "TypeScript port of the Eterna ActionScript game",
  "scripts": {
    "start": "npm run postbuild:dev && concurrently \"npm run build:dev -- --watch\" \"ws -d dist/dev -p 63343\"",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "typecheck": "tsc --noEmit",
    "build:dev": "webpack --config webpack.dev.js",
    "build:surge": "webpack --config webpack.surge.js",
    "build:prod": "webpack --config webpack.prod.js",
    "postbuild:dev": "cp -R ./website/frontend ./dist/dev && coffee -o ./dist/dev/frontend/jscripts -c ./website/frontend/coffee",
    "postbuild:surge": "cp -R ./website/frontend ./dist/surge && coffee -o ./dist/surge/frontend/jscripts -c ./website/frontend/coffee",
    "test": "jest --verbose",
    "lint": "eslint src --ext .ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "rootDir": "src",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.(ts|tsx|js)$",
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "tsConfig": "./tsconfig.jest.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EteRNAgame/EternaJS.git"
  },
  "keywords": [],
  "author": "Tim Conkling",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-typescript": "^7.3.3",
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^24.0.15",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^12.0.10",
    "@types/pixi.js": "^4.8.8",
    "@types/storejs": "^2.0.3",
    "@types/upng-js": "^2.1.1",
    "@types/webfontloader": "^1.6.29",
    "@typescript-eslint/eslint-plugin": "^1.11.0",
    "@typescript-eslint/parser": "^1.11.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-minify": "^0.5.0",
    "coffeescript": "^1.12.7",
    "concurrently": "^4.1.1",
    "css-loader": "^3.0.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.0.1",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.0",
    "file-loader": "^4.0.0",
    "hard-source-webpack-plugin": "0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "local-web-server": "^3.0.4",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "typescript": "^3.5.2",
    "webpack": "^4.35.2",
    "webpack-cli": "^3.3.5",
    "webpack-manifest-plugin": "^2.0.4",
    "webpack-merge": "^4.2.1"
  },
  "dependencies": {
    "base64-js": "^1.3.0",
    "js-polyfills": "^0.1.42",
    "localforage": "^1.7.3",
    "loglevel": "^1.6.3",
    "pixi-filters": "^2.7.1",
    "pixi-multistyle-text": "^0.7.0",
    "pixi-sound": "^2.1.0",
    "pixi.js": "^4.8.8",
    "store": "^2.0.12",
    "upng-js": "^2.1.0",
    "webfontloader": "^1.6.28"
  }
}
