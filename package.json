{
  "name": "eternajs",
  "version": "1.0.0",
  "description": "TypeScript port of the Eterna ActionScript game",
  "scripts": {
    "start": "npm run postbuild:dev && concurrently \"npm run build:dev -- --watch\" \"ws -d dist/dev -p 63343\"",
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "typecheck": "tsc --noEmit",
    "build:dev": "webpack --config webpack.dev.js",
    "build:surge": "webpack --config webpack.surge.js",
    "build:prod": "webpack --config webpack.prod.js",
    "postbuild:dev": "cp -R ./website/frontend ./dist/dev && coffee -o ./dist/dev/frontend/jscripts -c ./website/frontend/coffee",
    "postbuild:surge": "cp -R ./website/frontend ./dist/surge && coffee -o ./dist/surge/frontend/jscripts -c ./website/frontend/coffee",
    "test": "jest --verbose",
    "lint": "eslint src --ext .ts"
  },
  "jest": {
    "preset": "ts-jest",
    "moduleDirectories": [
      "node_modules",
      "src",
      ""
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "assets/__mocks__/fileMock.js",
      "\\.(css|less)$": "assets/__mocks__/styleMock.js"
    },
    "rootDir": "src",
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/__tests__/.*\\.test\\.(ts|tsx|js)$",
    "globals": {
      "ts-jest": {
        "babelConfig": false,
        "tsConfig": "./tsconfig.jest.json"
      }
    },
    "setupFiles": [
      "jest-canvas-mock",
      "dotenv/config"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EteRNAgame/EternaJS.git"
  },
  "keywords": [],
  "author": "Tim Conkling",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.7.5",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.7.4",
    "@babel/plugin-syntax-dynamic-import": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "@babel/preset-typescript": "^7.7.4",
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^24.0.24",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^12.12.21",
    "@types/pixi.js": "^4.8.9",
    "@types/storejs": "^2.0.3",
    "@types/upng-js": "^2.1.1",
    "@types/webfontloader": "^1.6.29",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "babel-loader": "^8.0.6",
    "babel-polyfill": "^6.26.0",
    "babel-preset-minify": "^0.5.1",
    "coffeescript": "^1.12.7",
    "concurrently": "^4.1.2",
    "css-loader": "^3.4.0",
    "dotenv-webpack": "^1.7.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-import": "^2.18.2",
    "file-loader": "^4.3.0",
    "hard-source-webpack-plugin": "0.13.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-canvas-mock": "^2.2.0",
    "lint-staged": "^9.5.0",
    "local-web-server": "^3.0.7",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3",
    "webpack": "^4.41.3",
    "webpack-cli": "^3.3.10",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "base64-js": "^1.3.1",
    "js-polyfills": "^0.1.42",
    "libtess": "^1.2.2",
    "localforage": "^1.7.3",
    "loglevel": "^1.6.6",
    "pchip": "^1.0.2",
    "pixi-filters": "^2.7.1",
    "pixi-multistyle-text": "^0.7.0",
    "pixi-sound": "^2.1.0",
    "pixi.js": "^4.8.8",
    "store": "^2.0.12",
    "upng-js": "^2.1.0",
    "webfontloader": "^1.6.28"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint -- --fix",
      "npm run test -- --findRelatedTests",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run typecheck"
    }
  }
}
