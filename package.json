{
  "name": "eternajs",
  "version": "1.0.0",
  "description": "TypeScript port of the Eterna ActionScript game",
  "scripts": {
    "start": "node multiplatform/mkdirp dist/dev && npm run postbuild:dev && concurrently \"npm run build:dev -- --watch\" \"ws -d dist/dev -p 63343\"",
    "clean": "node multiplatform/rmrf dist && node multiplatform/rmrf node_modules/.cache",
    "typecheck": "tsc --noEmit",
    "build:dev": "node multiplatform/mkdirp dist/dev && webpack --config webpack.dev.js",
    "build:prod": "node multiplatform/mkdirp dist/prod && webpack --config webpack.prod.js",
    "postbuild:dev": "node multiplatform/cpr ./website/frontend ./dist/dev/frontend && coffee -o ./dist/dev/frontend/jscripts -c ./website/frontend/coffee",
    "test": "jest --verbose",
    "lint": "eslint src --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EteRNAgame/EternaJS.git"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-typescript": "^7.9.0",
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^25.1.4",
    "@types/loglevel": "^1.6.3",
    "@types/node": "^12.12.21",
    "@types/pixi.js": "^4.8.9",
    "@types/storejs": "^2.0.3",
    "@types/upng-js": "^2.1.1",
    "@types/webfontloader": "^1.6.29",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-loader": "^8.1.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-minify": "^0.5.1",
    "coffeescript": "^1.12.7",
    "concurrently": "^4.1.2",
    "css-loader": "^3.4.0",
    "dotenv": "^8.2.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-import-resolver-webpack": "^0.12.1",
    "eslint-plugin-import": "^2.20.1",
    "file-loader": "^4.3.0",
    "hard-source-webpack-plugin": "0.13.1",
    "html-webpack-plugin": "^4.0.2",
    "husky": "^3.1.0",
    "jest": "^25.2.3",
    "jest-canvas-mock": "^2.2.0",
    "lint-staged": "^9.5.0",
    "local-web-server": "^3.0.7",
    "source-map-loader": "^0.2.4",
    "style-loader": "^1.0.2",
    "ts-jest": "^25.2.1",
    "typescript": "^3.7.3",
    "webpack": "^4.42.1",
    "webpack-cli": "^3.3.11",
    "webpack-manifest-plugin": "^2.2.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "base64-js": "^1.3.1",
    "eterna-chat-wrapper": "github:eternagame/eterna-chat-wrapper",
    "js-polyfills": "^0.1.42",
    "libtess": "^1.2.2",
    "localforage": "^1.7.3",
    "loglevel": "^1.6.6",
    "pchip": "^1.0.2",
    "pixi-filters": "^2.7.1",
    "pixi-multistyle-text": "^0.7.0",
    "pixi-sound": "^2.1.0",
    "pixi.js": "^4.8.8",
    "store": "^2.0.12",
    "upng-js": "^2.1.0",
    "webfontloader": "^1.6.28"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint -- --fix",
      "npm run test -- --findRelatedTests",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && npm run typecheck"
    }
  },
  "optionalDependencies": {
    "eternajs-folding-engines": "github:eternagame/eternajs-folding-engines#8197d6cdd8bffc4fd1266e693dfde826356a328f"
  }
}
