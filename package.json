{
  "name": "eternajs",
  "version": "1.0.0",
  "description": "TypeScript port of the Eterna ActionScript game",
  "scripts": {
    "clean": "rm -rf dist && rm -rf node_modules/.cache",
    "typecheck": "tsc --noEmit",
    "build:dev": "webpack --config webpack.dev.js",
    "build:surge": "webpack --config webpack.surge.js",
    "build:prod": "webpack --config webpack.prod.js",
    "postbuild:dev": "cp -R ./website/frontend ./dist/dev && coffee -o ./dist/dev/frontend/jscripts -c ./website/frontend/coffee",
    "postbuild:surge": "cp -R ./website/frontend ./dist/surge && coffee -o ./dist/surge/frontend/jscripts -c ./website/frontend/coffee",
    "test": "jest --verbose",
    "lint": "eslint src --ext .ts"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "rootDir": "src",
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/../node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "/__tests__/.*\\.test\\.(ts|tsx|js)$",
    "globals": {
      "ts-jest": {
        "skipBabel": true,
        "tsConfigFile": "../tsconfig.jest.json"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EteRNAgame/JSport.git"
  },
  "keywords": [],
  "author": "Tim Conkling",
  "license": "ISC",
  "devDependencies": {
    "@babel/cli": "^7.0.0-rc.1",
    "@babel/core": "^7.0.0-rc.1",
    "@babel/plugin-proposal-class-properties": "^7.0.0-rc.1",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-rc.1",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0-rc.1",
    "@babel/preset-env": "^7.0.0-rc.1",
    "@babel/preset-typescript": "^7.0.0-rc.1",
    "@types/base64-js": "^1.2.5",
    "@types/jest": "^23.3.1",
    "@types/lodash": "^4.14.116",
    "@types/loglevel": "^1.5.3",
    "@types/node": "^10.7.0",
    "@types/pixi.js": "^4.8.0",
    "@types/storejs": "^2.0.3",
    "@types/webfontloader": "^1.6.29",
    "babel-loader": "^8.0.0-beta.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-minify": "^0.4.3",
    "coffeescript": "^1.12.7",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^1.0.0",
    "dotenv-webpack": "^1.5.7",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-import-resolver-webpack": "^0.10.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-typescript": "^0.12.0",
    "file-loader": "^1.1.11",
    "hard-source-webpack-plugin": "0.10.2",
    "jest": "^23.5.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.22.1",
    "ts-jest": "^23.1.3",
    "typescript": "^3.0.1",
    "typescript-eslint-parser": "^18.0.0",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.4"
  },
  "dependencies": {
    "base64-js": "^1.3.0",
    "lodash": "^4.17.10",
    "loglevel": "^1.6.1",
    "pixi-filters": "^2.6.1",
    "pixi-multistyle-text": "^0.6.0",
    "pixi-sound": "^2.0.2",
    "pixi.js": "^4.8.1",
    "store": "^2.0.12",
    "upng-js": "^2.1.0",
    "webfontloader": "^1.6.28"
  }
}
