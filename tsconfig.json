{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "lib": ["dom", "es6", "scripthost", "es2016.array.include"],
    "module": "esnext",
    "target": "es2015",
    "allowJs": true,
    "moduleResolution": "node",
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "strictNullChecks": false
  },
  "include": [
    "./src/**/*.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
